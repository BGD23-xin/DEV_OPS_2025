{
    "family": "<task_name>",
    "containerDefinitions": [
        {
            "cpu": 0,
            "environment": [],
            "essential": true,
            "image": "<image>",
            "logConfiguration": {
                "logDriver": "awsfirelens",
                "options": {},
                "secretOptions": []
            },
            "mountPoints": [],
            "name": "<container_name>",
            "portMappings": [
                {
                    "appProtocol": "http",
                    "containerPort": 80,
                    "hostPort": 80,
                    "name": "<container_name>-80-tcp",
                    "protocol": "tcp"
                }
            ],
            "systemControls": [],
            "volumesFrom": []
        },
        {
            "cpu": 0,
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "cn-northwest-1"
                },
                {
                    "name": "S3_CONFIG_BUCKET",
